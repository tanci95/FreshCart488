    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Add Grocery Item" FontSize="20" />

        <Entry x:Name="ItemNameEntry" Placeholder="Item name" />
        <Entry x:Name="ItemQuantityEntry" Placeholder="Quantity" Keyboard="Numeric" />

        <Button Text="Add Item" Clicked="OnAddItemClicked" />

        <Label Text="Inventory List" FontSize="20" Margin="0,20,0,0"/>

        <CollectionView x:Name="GroceryListView" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="10" Margin="5">
                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="{Binding Name}" FontSize="16" WidthRequest="120"/>
                            <Label Text="{Binding Quantity}" FontSize="16" WidthRequest="40"/>
                            <Button Text="+" Clicked="OnIncreaseClicked" CommandParameter="{Binding .}" />
                            <Button Text="-" Clicked="OnDecreaseClicked" CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>


